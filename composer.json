{
  "name": "overdata/portfolio-licensing",
  "description": "Portfolio website with licensing validation API (PHP)",
  "type": "project",
  "require": {
    "php": ">=8.0",
    "vlucas/phpdotenv": "^5.6"
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  },
  "scripts": {
    "post-install-cmd": [
      "@php -r \"if (!file_exists('.env')) { copy('.env.example', '.env'); }\""
    ],
    "post-update-cmd": [
      "@php -r \"if (!file_exists('.env')) { copy('.env.example', '.env'); }\""
    ]
  }
}
